{
  "name": "BetterNotion",
  "description": "fixing the ugly titlebar for Notion Desktop app for Windows",
  "main": "src/main.js",
  "author": "Aditya Gaikwad <g.aditya2048@gmail.com>",
  "license": "ISC",
  "version": "1.1.0",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --windows --linux",
    "release": "electron-builder --windows --linux --publish always"
  },
  "build": {
    "appId": "com.totallynotadi.BetterNotion",
    "productName": "BetterNotion",
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "pacman"
      ],
      "icon": "assets/notion.png",
      "category": "Office"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/notion.ico"
    },
    "directories": {
      "buildResources": "./assets",
      "output": "dist"
    }
  },
  "keywords": [
    "electron",
    "notion"
  ],
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.9.1"
  }
}