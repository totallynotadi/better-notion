{
  "name": "BetterNotion",
  "description": "fixing the ugly titlebar for Notion Desktop app for Windows",
  "main": "src/main.js",
  "author": "Aditya Gaikwad <g.aditya2048@gmail.com>",
  "license": "ISC",
  "version": "1.1.2",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --windows",
    "release": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.totallynotadi.BetterNotion",
    "productName": "BetterNotion",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip"
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/notion.ico"
    },
    "directories": {
      "buildResources": "./assets",
      "output": "dist"
    }
  },
  "keywords": [
    "electron",
    "notion"
  ],
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.9.1"
  }
}